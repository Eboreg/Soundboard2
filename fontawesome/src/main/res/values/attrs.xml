<resources>
    <declare-styleable name="FontAwesomeAttributes">
        <attr name="fontAwesomeTypeface" format="enum">
            <enum name="regular" value="0" />
            <enum name="solid" value="1" />
            <enum name="brands" value="2" />
        </attr>
    </declare-styleable>
    <declare-styleable name="FontAwesomeTextView" parent="Widget.AppCompat.TextView">
        <attr name="fontAwesomeTypeface" />
        <attr name="android:text" />
        <attr name="android:autoSizeMaxTextSize" />
    </declare-styleable>
    <declare-styleable name="FontAwesomeDrawable">
        <attr name="fontAwesomeTypeface" />
        <attr name="android:text" />
        <attr name="android:textColor" />
        <attr name="android:textStyle" />
        <attr name="android:textSize" />
        <attr name="android:textAppearance" />
    </declare-styleable>
    <declare-styleable name="FontAwesomeButton" parent="FontAwesomeTextView">
        <attr name="android:enabled" />
    </declare-styleable>
    <declare-styleable name="FontAwesomeTheme">
        <attr name="fontAwesomeTextViewStyle" format="reference" />
        <attr name="fontAwesomeButtonStyle" format="reference" />
        <attr name="fontAwesomeDrawableStyle" format="reference" />
    </declare-styleable>
</resources>