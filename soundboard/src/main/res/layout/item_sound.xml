<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="us.huseli.soundboard2.viewmodels.SoundViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/soundContainer"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/soundCard"
            android:layout_marginHorizontal="@dimen/margin_small"
            android:layout_marginBottom="@dimen/margin_normal"
            app:cardBackgroundColor="@{viewModel.backgroundColor}"
            app:cardCornerRadius="@dimen/sound_card_corner_radius"
            app:cardElevation="@dimen/elevation_large"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="4:3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:cardBackgroundColor="@color/purple_500">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/soundName"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="@dimen/margin_small"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="@{viewModel.name}"
                    android:textAlignment="center"
                    android:textColor="@{viewModel.textColor}"
                    app:layout_constraintBottom_toTopOf="@+id/soundProgressBar"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="TextContrastCheck"
                    tools:text="Sound name"
                    tools:textColor="@color/white" />

                <us.huseli.fontawesome.FontAwesomeTextView
                    android:id="@+id/soundLoadingIcon"
                    style="@style/Style.Soundboard.SoundCardIcon"
                    android:text="@string/fas_hourglass_half"
                    android:textColor="@{viewModel.textColor}"
                    app:layout_constraintBottom_toTopOf="@+id/soundProgressBar"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:visibility="invisible" />

                <us.huseli.fontawesome.FontAwesomeTextView
                    android:id="@+id/soundPlayingIcon"
                    style="@style/Style.Soundboard.SoundCardIcon"
                    android:text="@string/fa_circle_play"
                    android:textColor="@{viewModel.textColor}"
                    app:layout_constraintBottom_toTopOf="@+id/soundProgressBar"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:visibility="invisible" />

                <us.huseli.fontawesome.FontAwesomeTextView
                    android:id="@+id/soundPausedIcon"
                    style="@style/Style.Soundboard.SoundCardIcon"
                    android:text="@string/fa_circle_pause"
                    android:textColor="@{viewModel.textColor}"
                    app:layout_constraintBottom_toTopOf="@+id/soundProgressBar"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:visibility="invisible" />

                <us.huseli.fontawesome.FontAwesomeTextView
                    android:id="@+id/soundFailedIcon"
                    style="@style/Style.Soundboard.SoundCardIcon"
                    android:text="@string/fas_skull_crossbones"
                    android:textColor="@{viewModel.textColor}"
                    app:layout_constraintBottom_toTopOf="@+id/soundProgressBar"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:visibility="invisible" />

                <us.huseli.fontawesome.FontAwesomeTextView
                    android:id="@+id/soundSelectedIcon"
                    style="@style/Style.Soundboard.SoundCardIcon"
                    android:background="#A0B2EBF2"
                    android:text="@string/fas_check"
                    android:textColor="@{viewModel.textColor}"
                    app:layout_constraintBottom_toTopOf="@+id/soundProgressBar"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:visibility="invisible" />

                <us.huseli.fontawesome.FontAwesomeTextView
                    android:id="@+id/soundReorderIcon"
                    style="@style/Style.Soundboard.SoundCardIcon"
                    android:text="@string/fas_up_down_left_right"
                    android:textColor="@{viewModel.textColor}"
                    app:layout_constraintBottom_toTopOf="@+id/soundProgressBar"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:visibility="invisible" />

                <ProgressBar
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:id="@+id/soundProgressBar"
                    android:max="100"
                    android:min="0"
                    android:progress="@{viewModel.volume}"
                    app:backgroundColor="@{viewModel.backgroundColor}"
                    app:progressBackgroundTintColor="@{viewModel.backgroundColor}"
                    android:progressBackgroundTintMode="src_over"
                    app:progressTintColor="@{viewModel.progressTintColor}"
                    android:progressTintMode="src_over"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:layout_height="10dp"
                    tools:progress="50"
                    tools:progressTint="@color/purple_200"
                    tools:progressTintMode="src_over"
                    tools:progressBackgroundTint="@color/purple_500"
                    tools:progressBackgroundTintMode="src_over"
                    tools:ignore="UnusedAttribute" />

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/soundDurationCard"
                    android:visibility="gone"
                    app:cardBackgroundColor="#80000000"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:visibility="visible">

                    <TextView
                        android:id="@+id/soundDuration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:alpha="0.8"
                        android:paddingHorizontal="@dimen/margin_small"
                        android:textColor="@color/white"
                        android:textSize="@dimen/small_text"
                        tools:text="2s" />
                </androidx.cardview.widget.CardView>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>