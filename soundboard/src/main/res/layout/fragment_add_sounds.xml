<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="us.huseli.soundboard2.viewmodels.SoundAddViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/addSoundFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/margin_xlarge">

        <TextView
            android:id="@+id/soundNameLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/soundName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:enabled="@{viewModel.nameIsEditable}"
            android:focusedByDefault="true"
            android:hint="@string/name"
            android:importantForAutofill="no"
            android:inputType="text"
            android:minHeight="48dp"
            android:singleLine="true"
            android:text="@{viewModel.name}"
            android:textColor="@android:color/primary_text_dark"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/soundNameLabel"
            tools:ignore="UnusedAttribute,DuplicateSpeakableTextCheck" />

        <TextView
            android:id="@+id/volumeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_normal"
            android:text="@string/volume"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/soundName" />

        <SeekBar
            android:id="@+id/volume"
            style="@style/Widget.AppCompat.SeekBar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_normal"
            android:max="100"
            android:min="0"
            android:progress="@{viewModel.volume}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/volumeLabel"
            tools:ignore="UnusedAttribute" />

        <TextView
            android:id="@+id/categoryLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_normal"
            android:text="@string/category"
            android:labelFor="@+id/category"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/volume" />

        <Spinner
            android:id="@+id/category"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:selectedItemPosition="@{viewModel.selectedCategoryPosition}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/categoryLabel"
            tools:ignore="DuplicateSpeakableTextCheck" />

        <LinearLayout
            android:id="@+id/duplicateBlock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_xlarge"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/category"
            app:visible="@{viewModel.hasDuplicates}"
            tools:visible="true">

            <TextView
                android:id="@+id/duplicateText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                tools:text="2 of the selected sounds already exist in the database. Do you want to add duplicates of them?" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/duplicateAdd"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@{@plurals/add_duplicate(viewModel.duplicateCount ?? 0)}"
                android:textOff="@string/no"
                android:textOn="@string/yes"
                app:switchMinWidth="50sp"
                app:switchPadding="@dimen/margin_large"
                android:checked="@{viewModel.duplicateAdd}"
                tools:text="Add duplicates" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Will add 2 sounds and skip 2."
                android:text="@{@plurals/add_sound_counts(viewModel.addSoundCount ?? 0, viewModel.addSoundCount, viewModel.skipSoundCount)}" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>